<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:buttonStyle">@style/Widget.Button</item>
    </style>

    <style name="PopupTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:buttonStyle">@style/Widget.Button</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#88ff8800</item>
    </style>

    <style name="Widget">
    </style>
    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_vertical</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">1dip</item>
    </style>
    <style name="Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">1dip</item>
    </style>
    <style name="Widget.ProgressBar.Circular">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_circular</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">1dip</item>
    </style>

    <style name="Widget.Tab"></style>
    <style name="Widget.Tab.Container">
        <item name="android:background">@drawable/tab_container</item>
    </style>
    <style name="Widget.Tab.Bar">
        <item name="android:background">@drawable/tab_bar</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="Widget.Tab.Button">
        <item name="android:background">@drawable/tab_button_background</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="Widget.Button">
<!--
        <item name="android:background">@drawable/button_background</item>
    -->
    </style>

</resources>