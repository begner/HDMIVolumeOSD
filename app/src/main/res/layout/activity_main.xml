<?xml version="1.0" encoding="utf-8"?>
<androidx.leanback.widget.TitleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Settings Pane -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom|right">
                <Button
                    android:id="@+id/main_btn_open_settings_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="openSettingsOSD"
                    android:text="@string/main_button_settings_osd" />
                <Button
                    android:id="@+id/main_btn_open_settings_mqtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="openSettingsMQTT"
                    android:text="@string/main_button_settings_mqtt" />
            </LinearLayout>
    </LinearLayout>

</androidx.leanback.widget.TitleView>
