<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vosd_osd_container"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ProgressBar
            android:id="@+id/vosd_bar"
            style="@style/Widget.ProgressBar.Horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vosd_temp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_bg"
            android:indeterminate="false"
            android:max="60"
            android:progress="20"
            />

        <ImageView
            android:id="@+id/vosd_icon_speaker"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vosd_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="15dp"

            android:contentDescription="SpeakerIcon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_icon_speaker_1"
            android:tint="#FFFFFF"
            android:visibility="visible"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/vosd_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vosd_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingEnd="15dp"

            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="40"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat,RtlSymmetry" />


        <TextView
            android:id="@+id/vosd_temp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vosd_bar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            android:paddingStart="30dp"
            android:paddingEnd="15dp"

            android:background="@drawable/layout_bg"

            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="10.0 Â°C"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/vosd_icon_temp"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/vosd_temp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="Temperature"
            android:cropToPadding="true"
            android:scaleType="fitStart"
            android:src="@drawable/ic_icon_temperature"
            android:tint="#FFFFFF"
            android:visibility="visible"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>