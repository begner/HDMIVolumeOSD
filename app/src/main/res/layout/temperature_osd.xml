<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vosd_osd_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/vosd_bar_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp">

        <ProgressBar
            android:id="@+id/vosd_bar"
            style="@style/Widget.ProgressBar.Circular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="70"
            android:progress="10"
            />
        </FrameLayout>

        <ImageView
            android:id="@+id/vosd_icon_temp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="left|center"
            android:adjustViewBounds="true"
            android:contentDescription="Temperature"
            android:cropToPadding="true"

            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_icon_temperature"
            android:tint="#44ffffff"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/vosd_bar_container"
            app:layout_constraintEnd_toEndOf="@id/vosd_bar_container"
            app:layout_constraintStart_toStartOf="@id/vosd_bar_container"
            app:layout_constraintTop_toTopOf="@id/vosd_bar_container"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/vosd_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/vosd_unit"
            app:layout_constraintEnd_toStartOf="@id/vosd_unit"
            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="10.0"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/vosd_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="Â°C"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="visible"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>