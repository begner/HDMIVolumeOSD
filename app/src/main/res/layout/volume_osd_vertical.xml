<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/vosd_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vosd_osd_container"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/vosd_bar_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vosd_temp"
            android:paddingTop="45dp"
            android:paddingBottom="45dp"
            android:background="@drawable/layout_bg"
            >

            <SeekBar
                android:id="@+id/vosd_bar"
                style="@android:style/Widget.Material.SeekBar"
                android:indeterminate="false"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="#44ff8800"
                android:max="60"
                android:progress="20"
                android:progressTint="#FFFFFF"
                android:shadowColor="#ff000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="5.0"
                android:splitTrack="false"
                android:thumbTint="#FFFFFF"
                android:rotation="270"
                />

            </FrameLayout>

        <ImageView
            android:id="@+id/vosd_icon_speaker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/vosd_bar_container"
            android:paddingTop="15dp"

            android:contentDescription="SpeakerIcon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_icon_speaker_1"
            android:tint="#FFFFFF"
            android:visibility="visible"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/vosd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/vosd_bar_container"
            android:paddingBottom="15dp"

            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="40"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat,RtlSymmetry" />

        <TextView
            android:id="@+id/vosd_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:paddingTop="30dp"
            android:paddingBottom="15dp"

            android:background="@drawable/layout_bg"

            android:gravity="center"
            android:shadowColor="#ff000000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="5.0"
            android:text="10.0 Â°C"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

