<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:id="@+id/vosd_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vosd_icon_speaker"
                android:layout_width="25dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="SpeakerIcon"
                android:cropToPadding="true"
                android:scaleType="fitStart"
                android:src="@drawable/ic_icon_speaker_1"
                android:tint="#FFFFFF"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/vosd_bar"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:indeterminate="false"
                android:max="60"
                android:progress="20"
                android:progressTint="#FFFFFF"
                android:shadowColor="#ff000000"
                android:rotation="-90"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="5.0"
                android:splitTrack="false"
                android:thumbTint="#FFFFFF" />

            <TextView
                android:id="@+id/vosd_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:shadowColor="#ff000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="5.0"
                android:text="40"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/vsod_temp_container"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:background="@drawable/layout_bg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/vsod_icon_temp"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="Temperature"
                android:cropToPadding="true"
                android:scaleType="fitStart"
                android:src="@drawable/ic_icon_temperature"
                android:tint="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/vosd_temp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="#ff000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="5.0"
                android:text="10.0 Â°C"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        </LinearLayout>

</merge>