<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="false"
        android:state_selected="false"
        >
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/tab_border_color" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:radius="2dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp" />
        </shape>
    </item>
    <item
        android:state_focused="true"
        android:state_selected="false"
        >
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/tab_border_color" />
            <gradient
                android:angle="270"
                android:startColor="#404040"
                android:endColor="@color/background_popup"
                />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:radius="2dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp" />
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_selected="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetBottom="-2dp">
            <shape>
                <stroke
                    android:width="2dp"
                    android:color="@color/tab_border_color"
                    />
                <gradient
                    android:angle="270"
                    android:startColor="#404040"
                    android:endColor="@color/background_popup"
                    />
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="2dp"
                    />
                <padding
                    android:bottom="0dp"
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"
                    />
            </shape>
        </inset>


    </item>
    <item
        android:state_focused="true"
        android:state_selected="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:insetBottom="-2dp">
            <shape>
                <stroke
                    android:width="2dp"
                    android:color="@color/tab_border_color"
                    />
                <gradient
                    android:angle="270"
                    android:startColor="#808080"
                    android:endColor="@color/background_popup"
                    />
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="2dp"
                    />
                <padding
                    android:bottom="0dp"
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"
                    />
            </shape>
        </inset>
    </item>
</selector>