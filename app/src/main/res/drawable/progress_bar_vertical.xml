<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
        android:left="15dp"
        android:right="15dp">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="#444"
                android:centerColor="#222"
                android:centerY="0.40"
                android:endColor="#666"
                android:angle="180"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:left="15dp"
        android:right="15dp">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape android:gravity="bottom">
                <corners android:radius="5dp" />
                <gradient
                    android:startColor="#888"
                    android:centerColor="#ffff"
                    android:centerY="0.60"

                    android:endColor="#444"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
</layer-list>
